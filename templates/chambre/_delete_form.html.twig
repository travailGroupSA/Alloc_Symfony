<form class='d-inline' method="post" action="{{ path('chambre_delete', {'id': chambre.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">
    <button class="btn btn-danger text-light">Supprimer</button>
</form>
